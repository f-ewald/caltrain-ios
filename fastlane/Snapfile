# App Store required device sizes
# iPhone 17 Pro for 6.9" phone screenshots
# iPad Pro 13-inch (M5) for tablet screenshots
devices([
  "iPhone 17 Pro",           # Will be resized to 1284x2778 (App Store 6.5" requirement)
  # "iPad Pro 13-inch (M5)"        # Will be resized to 2048x2732 (App Store iPad Pro 12.9" requirement)
])

# Start with English only
languages([
  "en-US"
])

# Must match the main app scheme (which includes UI tests)
scheme("caltrain")

# Output directory
output_directory("./fastlane/screenshots")

# Clear previous screenshots
clear_previous_screenshots(true)

# Show clean status bar (9:41, full battery/signal)
override_status_bar(true)

# Launch arguments for test detection
launch_arguments([
  "-FASTLANE_SNAPSHOT YES"
])
